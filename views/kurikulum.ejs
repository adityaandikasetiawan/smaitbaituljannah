  <%- include('partials/header') %>
  
  <main class="main-content layout-pt-lg layout-pb-lg">
    <section class="page-header -type-1">
      <div class="container">
        <div class="page-header__content">
          <div class="row justify-center text-center">
            <div class="col-xl-6 col-lg-7 col-md-9">
              <h1 class="page-header__title">Kurikulum</h1>
              <p class="page-header__text">Struktur kurikulum SMPIT Baituljannah yang mengintegrasikan pendidikan umum dan keagamaan</p>
            </div>
          </div>
        </div>
