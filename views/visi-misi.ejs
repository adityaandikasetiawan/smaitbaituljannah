<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Visi & Misi - SMPIT Baituljannah</title>
  
  <!-- CSS -->
  <link rel="stylesheet" href="/css/vendors.css">
  <link rel="stylesheet" href="/css/main.css">
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/img/general/favicon.ico">
</head>
<body class="preloader-visible" data-barba="wrapper">
  <!-- Preloader -->
  <div class="preloader js-preloader">
    <div class="preloader__wrap">
      <div class="preloader__icon">
        <div class="preloader__img"></div>
      </div>
    </div>
  </div>

  <main class="main-content">
    <%- include('partials/header') %>

    <!-- Page Header -->
    <section class="page-header -type-1">
      <div class="container">
        <div class="page-header__content">
          <div class="row justify-center text-center">
            <div class="col-xl-6 col-lg-7 col-md-9">
              <h1 class="page-header__title">Visi & Misi</h1>
              <p class="page-header__text">Landasan filosofis dan arah pengembangan SMPIT Baituljannah</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <% if (typeof visiMisi !== 'undefined' && visiMisi) { %>
      <!-- Visi Section -->
      <% if (visiMisi.visi) { %>
      <section class="layout-pt-md layout-pb-md">
        <div class="container">
          <div class="row justify-center">
            <div class="col-xl-10">
              <div class="bg-purple-1 rounded-16 px-40 py-40 md:px-30 md:py-30">
                <div class="row align-items-center">
                  <div class="col-lg-2 col-md-3">
                    <div class="text-center">
                      <div class="bg-white rounded-full size-80 d-flex align-items-center justify-center">
                        <i class="icon icon-eye text-purple-1 text-30"></i>
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-10 col-md-9">
                    <h2 class="text-white text-24 fw-600 mb-15">Visi</h2>
                    <p class="text-white text-16 lh-18 mb-0"><%= visiMisi.visi %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <% } %>

      <!-- Misi Section -->
      <% if (visiMisi.misi && Array.isArray(visiMisi.misi) && visiMisi.misi.length > 0) { %>
      <section class="layout-pt-md layout-pb-md">
        <div class="container">
          <div class="row justify-center text-center">
            <div class="col-xl-6 col-lg-8">
              <div class="sectionTitle">
                <h2 class="sectionTitle__title">Misi</h2>
                <p class="sectionTitle__text">Langkah-langkah strategis untuk mewujudkan visi sekolah</p>
              </div>
            </div>
          </div>

          <div class="row y-gap-30 justify-center pt-60 lg:pt-50">
            <% visiMisi.misi.forEach((item, index) => { %>
            <div class="col-lg-6">
              <div class="missionCard d-flex align-items-start">
                <div class="missionCard__icon bg-red-1 rounded-full size-60 d-flex align-items-center justify-center mr-20">
                  <span class="text-white text-18 fw-600"><%= index + 1 %></span>
                </div>
                <div class="missionCard__content">
                  <p class="text-dark-1 text-16 lh-18 mb-0"><%= item %></p>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
        </div>
      </section>
      <% } %>

      <!-- Tujuan Pendidikan Section -->
      <% if (visiMisi.tujuan && Array.isArray(visiMisi.tujuan) && visiMisi.tujuan.length > 0) { %>
      <section class="layout-pt-md layout-pb-md bg-light-4">
        <div class="container">
          <div class="row justify-center text-center">
            <div class="col-xl-6 col-lg-8">
              <div class="sectionTitle">
                <h2 class="sectionTitle__title">Tujuan Pendidikan</h2>
                <p class="sectionTitle__text">Target pencapaian dalam proses pendidikan di SMPIT Baituljannah</p>
              </div>
            </div>
          </div>

          <div class="row y-gap-30 justify-center pt-60 lg:pt-50">
            <% 
              const icons = ['icon-graduation-cap', 'icon-book-open', 'icon-users', 'icon-star', 'icon-heart', 'icon-lightbulb'];
              const colors = ['bg-blue-1', 'bg-green-1', 'bg-purple-1', 'bg-orange-1', 'bg-red-1', 'bg-yellow-1'];
            %>
            <% visiMisi.tujuan.forEach((item, index) => { %>
            <div class="col-lg-6">
              <div class="goalCard bg-white rounded-8 px-30 py-30 shadow-2">
                <div class="d-flex align-items-start">
                  <div class="goalCard__icon <%= colors[index % colors.length] %> rounded-full size-50 d-flex align-items-center justify-center mr-20">
                    <i class="icon <%= icons[index % icons.length] %> text-white text-20"></i>
                  </div>
                  <div class="goalCard__content">
                    <p class="text-dark-1 text-15 lh-18 mb-0"><%= item %></p>
                  </div>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
        </div>
      </section>
      <% } %>

      <!-- Values Section -->
      <% if (visiMisi.nilai && Array.isArray(visiMisi.nilai) && visiMisi.nilai.length > 0) { %>
      <section class="layout-pt-md layout-pb-lg">
        <div class="container">
          <div class="row justify-center text-center">
            <div class="col-xl-6 col-lg-8">
              <div class="sectionTitle">
                <h2 class="sectionTitle__title">Nilai-Nilai Sekolah</h2>
                <p class="sectionTitle__text">Prinsip-prinsip yang menjadi pedoman dalam setiap aktivitas sekolah</p>
              </div>
            </div>
          </div>

          <div class="row y-gap-30 justify-center pt-60 lg:pt-50">
            <% visiMisi.nilai.forEach((nilai, index) => { %>
            <div class="col-lg-3 col-md-6">
              <div class="valueCard text-center">
                <div class="valueCard__icon <%= nilai.color || 'bg-purple-1' %> rounded-full size-80 d-flex align-items-center justify-center mx-auto">
                  <i class="icon <%= nilai.icon || 'icon-star' %> text-white text-30"></i>
                </div>
                <h5 class="valueCard__title text-18 fw-600 text-dark-1 mt-20"><%= nilai.nama || 'Nilai' %></h5>
                <p class="valueCard__text text-15 mt-10 lh-18"><%= nilai.deskripsi || 'Deskripsi nilai' %></p>
              </div>
            </div>
            <% }); %>
          </div>
        </div>
      </section>
      <% } %>
    <% } else { %>
      <!-- No Data Available -->
      <section class="layout-pt-md layout-pb-lg">
        <div class="container">
          <div class="row justify-center text-center">
            <div class="col-xl-6">
              <h2>Data Visi & Misi tidak tersedia</h2>
              <p>Silakan hubungi administrator untuk informasi lebih lanjut.</p>
            </div>
          </div>
        </div>
      </section>
    <% } %>

  </main>

  <%- include('partials/footer') %>

  <!-- JavaScript -->
  <script src="/js/vendors.js"></script>
  <script src="/js/main.js"></script>
</body>
</html>