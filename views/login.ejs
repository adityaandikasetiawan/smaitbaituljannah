<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - SMPIT Baituljannah</title>
  
  <!-- CSS -->
  <link rel="stylesheet" href="/css/vendors.css">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/img/general/favicon.ico">
  
  <style>
    .preloader {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 9999;
      transition: opacity 0.3s ease;
    }
    
    .preloader.fade-out {
      opacity: 0;
      pointer-events: none;
    }
    
    .spinner {
      width: 50px;
      height: 50px;
      border: 3px solid #f3f3f3;
      border-top: 3px solid #6366f1;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }
    
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
    
    .form-page {
      min-height: 100vh;
      display: flex;
      padding: 20px;
    }
    
    .form-page__img {
      flex: 1;
      background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      border-radius: 20px 0 0 20px;
    }
    
    .form-page-composition {
      position: relative;
      width: 300px;
      height: 300px;
    }
    
    .form-page-composition > div {
      position: absolute;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 16px;
    }
    
    .form-page-composition > div:nth-child(1) {
      width: 120px;
      height: 120px;
      top: 0;
      left: 0;
      animation: float 3s ease-in-out infinite;
    }
    
    .form-page-composition > div:nth-child(2) {
      width: 80px;
      height: 80px;
      top: 50px;
      right: 0;
      animation: float 3s ease-in-out infinite 1s;
    }
    
    .form-page-composition > div:nth-child(3) {
      width: 100px;
      height: 100px;
      bottom: 0;
      left: 50px;
      animation: float 3s ease-in-out infinite 2s;
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-20px); }
    }
    
    .form-page__content {
      flex: 1;
      display: flex;
      align-items: center;
      padding: 50px 0;
    }
    
    /* Mobile Responsiveness */
    @media (max-width: 768px) {
      .form-page {
        flex-direction: column;
        padding: 10px;
        align-items: flex-start;
        padding-top: 20px;
      }
      
      .form-page__img {
        min-height: 200px;
        order: -1;
        border-radius: 20px 20px 0 0;
        width: 100%;
      }
      
      .form-page-composition {
        width: 200px;
        height: 150px;
      }
      
      .form-page-composition > div:nth-child(1) {
        width: 80px;
        height: 80px;
      }
      
      .form-page-composition > div:nth-child(2) {
        width: 60px;
        height: 60px;
      }
      
      .form-page-composition > div:nth-child(3) {
        width: 70px;
        height: 70px;
      }
      
      .form-page__content {
        padding: 25px 0;
      }
      
      .px-50 {
        padding-left: 20px !important;
        padding-right: 20px !important;
      }
      
      .py-50 {
        padding-top: 30px !important;
        padding-bottom: 30px !important;
      }
      
      .text-30 {
        font-size: 24px !important;
      }
      
      .button {
        padding: 15px 20px !important;
        font-size: 16px !important;
      }
      
      input[type="email"], input[type="password"] {
        padding: 15px !important;
        font-size: 16px !important;
      }
    }
    
    /* Tablet Responsiveness */
    @media (min-width: 769px) and (max-width: 1024px) {
      .form-page {
        padding: 15px;
      }
      
      .form-page__img {
        min-height: 350px;
      }
      
      .form-page-composition {
        width: 250px;
        height: 250px;
      }
    }
    
    /* Small Mobile */
    @media (max-width: 480px) {
      .form-page {
        padding: 5px;
      }
      
      .form-page__img {
        min-height: 150px;
      }
      
      .px-50 {
        padding-left: 15px !important;
        padding-right: 15px !important;
      }
      
      .py-50 {
        padding-top: 25px !important;
        padding-bottom: 25px !important;
      }
      
      .text-30 {
        font-size: 22px !important;
      }
    }
    
    @media (max-width: 991px) {
      .form-page {
        flex-direction: column;
      }
      
      .form-page__img {
        min-height: 200px;
      }
      
      .form-page__content {
        padding: 25px 0;
      }
    }
  </style>
</head>
<body class="preloader-visible" data-barba="wrapper">
  <!-- Preloader -->
  <div class="preloader" id="preloader">
    <div class="preloader__wrap">
      <div class="preloader__number">0</div>
      <div class="preloader__decor -left">
        <div class="preloader__line"></div>
      </div>
      <div class="preloader__decor -right">
        <div class="preloader__line"></div>
      </div>
    </div>
  </div>

  <!-- Header -->
  <header data-anim="fade" data-add-bg="" class="header -type-4 -shadow bg-white border-bottom-light js-header">
    <div class="header__container py-10">
      <div class="row justify-between items-center">
        <div class="col-auto">
          <div class="header-left d-flex items-center">
            <div class="header__logo pr-30 xl:pr-20 md:pr-0">
              <a data-barba href="/">
                <img src="/img/logo smp.png" alt="logo" style="max-height: 50px; width: auto;">
              </a>
            </div>
          </div>
        </div>
        
        <div class="col-auto">
          <div class="header-right d-flex items-center">
            <a href="/portal-siswa" class="text-dark-1">Portal Siswa</a>
            <a href="/daftar-siswa" class="text-dark-1 ml-30">Pendaftaran</a>
            <a data-barba href="/" class="button -sm -outline-dark-1 text-dark-1 ml-30">Beranda</a>
          </div>
        </div>
      </div>
    </div>
  </header>

  <main>
    <section class="form-page">
      <div class="form-page__img bg-dark-1">
        <div class="form-page-composition">
          <div class="-bg-dark-1 rounded-16"></div>
          <div class="-bg-dark-1 rounded-16"></div>
          <div class="-bg-dark-1 rounded-16"></div>
        </div>
      </div>

      <div class="form-page__content lg:py-50">
        <div class="container">
          <div class="row justify-center items-center">
            <div class="col-xl-6 col-lg-8">
              <div class="px-50 py-50 md:px-25 md:py-25 bg-white shadow-1 rounded-16">
                <h3 class="text-30 lh-13">Login Portal Siswa</h3>
                <p class="mt-10">Belum punya akun? <a href="/daftar-siswa" class="text-purple-1">Daftar sebagai siswa baru</a></p>

            <% if (typeof success !== 'undefined' && success) { %>
              <div class="alert alert-success mt-20">
                <p class="text-green-1">Login successful! Welcome back.</p>
              </div>
            <% } %>

            <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
              <div class="alert alert-danger mt-20">
                <% errors.forEach(error => { %>
                  <p class="text-red-1"><%= error %></p>
                <% }) %>
              </div>
            <% } %>

            <form class="contact-form respondForm__form row y-gap-20 pt-30" action="/login" method="POST">
              <div class="col-12">
                <label class="text-16 lh-1 fw-500 text-dark-1 mb-10">Email</label>
                <input type="email" name="email" placeholder="Email" value="<%= typeof formData !== 'undefined' ? formData.email || '' : '' %>" required>
              </div>
              <div class="col-12">
                <label class="text-16 lh-1 fw-500 text-dark-1 mb-10">Password</label>
                <input type="password" name="password" placeholder="Password" required>
              </div>
              <div class="col-12">
                <button type="submit" class="button -md -green-1 text-dark-1 fw-500 w-1/1">
                  Login
                </button>
              </div>
            </form>

            <div class="lh-12 text-dark-1 fw-500 text-center mt-20">Or sign in using</div>

                <div class="lh-12 text-dark-1 fw-500 text-center mt-30">
                  <p class="text-15 text-light-1">Butuh bantuan?</p>
                  <div class="d-flex justify-center items-center mt-15">
                    <a href="tel:+622112345678" class="text-purple-1 mr-20">
                      <i class="fas fa-phone mr-5"></i>
                      (021) 1234-5678
                    </a>
                    <a href="https://wa.me/6281234567890" class="text-green-1">
                      <i class="fab fa-whatsapp mr-5"></i>
                      WhatsApp
                    </a>
                  </div>
                  <p class="text-13 text-light-1 mt-15">Jam Pelayanan: Senin - Jumat, 08:00 - 16:00 WIB</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="footer -type-1 bg-dark-2">
    <div class="container">
      <div class="footer-header">
        <div class="row y-gap-20 justify-between items-center">
          <div class="col-auto">
            <div class="footer-header__logo">
              <img src="/img/logo smp.png" alt="logo" style="max-height: 40px; width: auto;">
            </div>
          </div>
          <div class="col-auto">
            <div class="footer-header-socials">
              <div class="d-flex items-center">
                <div class="text-17 fw-500 text-white mr-25">Ikuti Kami:</div>
                <div class="d-flex items-center">
                  <a href="#" class="d-flex items-center justify-center size-40 rounded-full bg-white-15 text-white mr-10">
                    <i class="fab fa-facebook-f text-14"></i>
                  </a>
                  <a href="#" class="d-flex items-center justify-center size-40 rounded-full bg-white-15 text-white mr-10">
                    <i class="fab fa-instagram text-14"></i>
                  </a>
                  <a href="#" class="d-flex items-center justify-center size-40 rounded-full bg-white-15 text-white">
                    <i class="fab fa-youtube text-14"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="py-30 border-top-light-15">
        <div class="row justify-between items-center y-gap-20">
          <div class="col-auto">
            <div class="text-13 lh-1 text-white-50">© 2025 SMPIT Baituljannah. All Rights Reserved.</div>
          </div>
          <div class="col-auto">
            <div class="d-flex items-center text-white-50 text-13">
              <div>Jl. Pramuka No.43 Kemiling Raya Bandar Lampung 35153</div>
              <div class="ml-30">Telepon: (0721) 8050145</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <!-- Scripts -->
  <script src="/js/vendors.js"></script>

  
  <script>
    // Preloader handling
    document.addEventListener('DOMContentLoaded', function() {
      const preloader = document.querySelector('.preloader');
      if (preloader) {
        setTimeout(function() {
          preloader.style.display = 'none';
        }, 500);
      }

      // Form handling
      const form = document.querySelector('form');
      if (form) {
        form.addEventListener('submit', function(e) {
          const emailInput = document.querySelector('input[name="email"]');
          const passwordInput = document.querySelector('input[name="password"]');
          
          if (!emailInput || !passwordInput) {
            return;
          }
          
          const email = emailInput.value.trim();
          const password = passwordInput.value.trim();
          
          if (!email || !password) {
            e.preventDefault();
            alert('Mohon lengkapi semua field yang diperlukan');
          }
        });
      }
    });
  </script>
</body>
</html>